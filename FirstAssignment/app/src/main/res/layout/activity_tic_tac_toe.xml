<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:gravity="center"
    android:background="#BC80C6"
    tools:context=".TicTacToeActivity">

    <TextView
        android:id="@+id/player1TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"
        android:text="Player #1 [X]"
        android:textSize="23sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_marginRight="10dp"
            android:layout_marginLeft="25dp"
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:textSize="25sp"
            android:contentDescription="Botón para poner X o O"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:textSize="25sp"
            android:contentDescription="Botón para poner X o O"/>

        <Button
            android:layout_marginLeft="10dp"
            android:layout_marginRight="25dp"
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:textSize="25sp"
            android:contentDescription="Botón para poner X o O"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Botones del segunda fila -->
        <Button
            android:layout_marginRight="10dp"
            android:layout_marginLeft="25dp"
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:textSize="25sp"
            android:contentDescription="Botón para poner X o O"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:textSize="25sp"
            android:contentDescription="Botón para poner X o O"/>

        <Button
            android:layout_marginLeft="10dp"
            android:layout_marginRight="25dp"
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:textSize="25sp"
            android:contentDescription="Botón para poner X o O"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Botones del tercera fila -->
        <Button
            android:layout_marginRight="10dp"
            android:layout_marginLeft="25dp"
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:textSize="25sp"
            android:contentDescription="Botón para poner X o O"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:textSize="25sp"
            android:contentDescription="Botón para poner X o O" />

        <Button
            android:layout_marginLeft="10dp"
            android:layout_marginRight="25dp"
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:textSize="25sp"
            android:contentDescription="Botón para poner X o O" />
    </LinearLayout>

    <TextView
        android:id="@+id/player2TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:text="Player #2 [O]"
        android:textSize="23sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <Button
        android:id="@+id/newGameButton"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textSize="23sp"
        android:textStyle="bold"
        android:text="¿Nueva Partida?"/>
</LinearLayout>